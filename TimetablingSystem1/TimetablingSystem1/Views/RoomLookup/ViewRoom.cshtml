@model TimetablingSystem1.Models.RoomLookupModel

@{
    ViewBag.Title = "View Details";
}

<h2>View Details</h2>

<fieldset>
    <legend>Room</legend>

    @Html.HiddenFor(model => model.roomsDelete.RoomID)




    <div class="display-label">
        @Html.DisplayNameFor(model => model.roomsDelete.BuildingCode)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.roomsDelete.BuildingCode)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.roomsDelete.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.roomsDelete.Name)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.roomsDelete.RoomType)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.roomsDelete.RoomType)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.roomsDelete.SeatingType)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.roomsDelete.SeatingType)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.roomsDelete.Capacity)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.roomsDelete.Capacity)
    </div>
    <div class="display-label">
        <p>Facilities available in this room:</p>
    </div>
    @foreach (var item in Model.roomfacView)
    {

        <p>@item.Name</p>
    }
</fieldset>

