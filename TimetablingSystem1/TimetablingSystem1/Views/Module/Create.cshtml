@model TimetablingSystem1.Models.Module
@using System.Web.Optimization;
@using System.Web.Mvc.Html;

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<p>Add module for @ViewBag.DepartmentCode department </p>

@using (Html.BeginForm())
{

    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Module</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.ModuleCode)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.ModuleCode)
            @Html.ValidationMessageFor(model => model.ModuleCode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.ModuleCode)
            @Html.ValidationMessageFor(model => model.ModuleCode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DepartmentCode)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.ModuleCode, new { @ViewBag.DepartmentCode })
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


    @Scripts.Render("~/bundles/jqueryval")

